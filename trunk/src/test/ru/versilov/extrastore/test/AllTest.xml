<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >
<suite name="ExtraStore" verbose="2" parallel="false">
    <test name="ExtraStore: Model Unit Tests">
        <classes>
            <class name="ru.versilov.extrastore.test.ProductUnitTest" />
        </classes>
    </test>

    <test name="ExtraStore: Store Beans">
        <classes>
            <class name="ru.versilov.extrastore.test.SearchTest"/>
            <class name="ru.versilov.extrastore.test.BestSellersTest"/>
        </classes>
    </test>
    
    <test name="ExtraaStore: Admin Beans">
        <classes>
            <class name="ru.versilov.extrastore.test.StoreManagerTest"/>
        </classes>
    </test>

    <test name="ExtraaStore: Order">
    	<classes>
    		<class name="ru.versilov.extrastore.test.OrderTest" />
    	</classes>
    </test>

    <test name="ExtraaStore: new">
        <classes>
            <class name="ru.versilov.extrastore.test.InventoryTest" />
            <class name="ru.versilov.extrastore.test.OrderApprovalDecisionTest" />
            <class name="ru.versilov.extrastore.test.ProcessOrderTest" />
        </classes>
    </test>
</suite>
