<?xml version="1.0" encoding="UTF-8"?>
<pages xmlns="http://jboss.com/products/seam/pages"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.2.xsd"
        no-conversation-view-id="/index.xhtml" http-port="8080">

    <page view-id="/cart.xhtml">
        <rewrite pattern="/cart" />
    </page>


    <page view-id="/product.xhtml">
        <rewrite pattern="/product/{id}" />
        <param name="id" value="#{product.urlAlias}"/>
    </page>

    <page view-id="/browse.xhtml">
        <rewrite pattern="/{cat}" />
        <param name="cat" value="#{categoryHome.id}" />
    </page>


</pages>